{
  "compilerOptions": {
    "outDir": "commonjs",
    "target": "esNext",
    "baseUrl": "./",
    "lib": ["esNext", "dom"],
    "esModuleInterop": true,
    "types": ["babylonjs"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
